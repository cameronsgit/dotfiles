#!/bin/bash
# vim: set ft=sh: #

# Cleanup
printf "Cleaning...\n"
brew cleanup
printf "Done!\n"

# Update Homebrew
printf "Updating Homebrew..."
brew update
printf "Done!\n"

# Upgrade Homebrew
printf "Upgrading Homebrew...\n"
brew upgrade
printf "Done!\n"

# Cleanup Homebrew
printf "Cleaning up Homebrew..\n"
brew cleanup
printf "Done!\n"

printf "Outdated Casks:\n"
brew cask upgrade

printf "Cleaning up installed Casks\n"
brew cask cleanup
printf "Done!\n"

printf "Outdated App Store Apps:\n"
softwareupdate --list
